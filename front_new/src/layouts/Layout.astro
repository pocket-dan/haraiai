---
import Footer from "@/components/footer.astro"

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/favicon.ico" />

    <title>{title}</title>

    <meta name="generator" content={Astro.generator} />
    <meta name="title" content={title} />
    <meta name="description" content="LINE上で2人で使える折半アプリ" />
    <link rel="canonical" href="https://haraiai.netlify.app" />

    <!-- OGP tags -->
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta
      property="og:description"
      content="LINEアプリ上で2人で使える折半アプリ"
    />
    <meta property="og:url" content="https://haraiai.netlify.app" />
    <meta property="og:site_name" content="haraiai - 払い合い" />
    <meta
      property="og:image"
      content="https://haraiai.netlify.app/logo-ogp.png"
    />
    <meta name="twitter:card" content="summary" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Zen+Maru+Gothic&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Zen+Maru+Gothic&display=swap"></noscript>

    <!-- Google site verification -->
    <meta
      name="google-site-verification"
      content="BFYPlt_zIMeP0-p5C2PvUMfLEp07wl8GpGpj7llQH4M"
    />
  </head>
  <body>
    <slot />

  </body>
  <Footer />
</html>

<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
  }
  html {
    font-family: 'Zen Maru Gothic', Avenir, Helvetica, Arial, sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  html,
  body {
    height: 100vh;
    background-color: #f8fafb;
  }

  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 20px;
  }
</style>
